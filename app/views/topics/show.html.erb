<h1><%= @topic.name %></h1>
 <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
 <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
<div class="row">
   <div class="col-md-8">
     <p class="lead">
      <%= render partial: "labels/list", locals: { labels: @topic.labels } %>
      <br>
      <%= @topic.description %>
     </p>
    <% @topic.posts.each do |posts| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= render partial: "labels/list", locals: { labels: posts.labels } %>
            <%= link_to posts.title, topic_post_path(@topic, posts) %>
          </h4>
          <small>
            submitted <%= time_ago_in_words(posts.created_at) %> ago by <%= posts.user.name %> </br> <%= posts.comments.count %> Comments
          </small>
        </div>
      </div>
      <% end %>
    </div>
    <% if current_user %>
      <div class="col-md-4">
        <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
